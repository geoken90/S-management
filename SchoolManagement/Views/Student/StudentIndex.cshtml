@model SchoolManagement.Models.Student

@{
    ViewBag.Title = "Student index";
    var addon = "@";
}

<section id="student_crud_section">
    <div class="container-fluid" id="student_crud_wrapper">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6" id="create_student_wrapper">
                <br />
                <h2>Create Student</h2>
                <br />
                <br />
                <form class="form-horizontal" action="" method="post">
                    <fieldset>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="firstname">First name : </label>
                            <div class="col-md-8 col-lg-8">
                                 <input id="uservat" name="uservat" type="text" value=""
                                           placeholder="Fill in the student's first name"
                                           pattern=""
                                           class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="lastname">Last name : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="lastname" name="lastname" type="text" value=""
                                       placeholder="Fill in the student's last name"
                                       pattern=""
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="age">Age : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="age" name="age" type="text" value=""
                                       placeholder="Fill in the student's age"
                                       pattern="^[//d+]$"
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="phonenumber">Phone number : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="phonenumber" name="phonenumber" type="text" value=""
                                       placeholder="Fill in the student's phone number"
                                       pattern="^[{210}1{0-9}9]$"
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="email">Email :</label>
                            <div class="col-md-8 col-lg-8">
                                <input id="email" name="email" type="text" placeholder="Fill in the student's email'"
                                       class="form-control input-md" required="">
                                <span class="help-block">e.g. example@mail.com</span>
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="area">Area : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="area" name="area" type="text" value=""
                                       placeholder="Fill in the student's area"
                                       pattern=""
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="street">Street : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="street" name="street" type="text" value=""
                                       placeholder="Fill in the student's street"
                                       pattern=""
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2 control-label" for="address">Age : </label>
                            <div class="col-md-8 col-lg-8">
                                <input id="address" name="address" type="text" value=""
                                       placeholder="Fill in the student's address"
                                       pattern="^[//d+]$"
                                       class="form-control input-md" required="true">
                            </div>
                        </div>
                        <!-- Button -->
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="createstudentbtn"></label>
                            <div class="col-md-8">
                                <button id="createstudentbtn" name="createstudentbtn" class="btn btn-primary">
                                    Create Student
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6" id="search_student_wrapper">
                <br />
                <h2 style="color:white">Search Student</h2>
                <br />
                <br />
                <form class="form-inline" id="searchStudentForm" name="searchStudentForm"
                      action="" method="post">
                    
                    <label class="sr-only" for="searchval">Username</label>
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0 col-xs-8">
                        <div id="firstAddon" class="input-group-addon">
                           @addon
                        </div>
                        <div id="secondAddon" class="input-group-addon">
                            name
                        </div>
                        <div id="thirdAddon" class="input-group-addon">
                            age
                        </div>
                        <div id="fourthAddon" class="input-group-addon">
                            grade
                        </div>
                        <input type="text" class="form-control input-large" name="searchval" id="searchval"
                               placeholder="Enter search criteria comma separated..." required>
                    </div>
                    <a id="clear_bt" class="btn btn-default text-muted" href="" title="Clear">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                    <button type="submit" class="btn btn-primary mb-2 mr-sm-2 mb-sm-0">Search</button>
                </form>   
            </div>
        </div>
    </div>
</section>

